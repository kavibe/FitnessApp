<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.Views.Registration.MotivationPage"
             xmlns:abs="http://schemas.microsoft.com/dotnet/2021/maui"
             BackgroundColor="#fff3f1">

    <Grid>

        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnScreenTappedAsync" />
        </Grid.GestureRecognizers>

        <AbsoluteLayout>

            <Button Text="Пропустить"
                    Clicked="GoLoginPage"
                    TextColor="#7B61FF"
                    BackgroundColor="Transparent"
                    FontAttributes="Bold"
                    FontSize="12"
                    AbsoluteLayout.LayoutBounds="1,0,AutoSize,AutoSize"
                    AbsoluteLayout.LayoutFlags="PositionProportional" />

            <Image Source="boywithgantele.png"
                   AbsoluteLayout.LayoutBounds="0.5,0.16,450,450"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />

            <Image Source="purpleform2.png"
                   AbsoluteLayout.LayoutBounds="0.75,0.9,400,400"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />

            <StackLayout AbsoluteLayout.LayoutBounds="0.5,0.75,0.95,0.3"
                         AbsoluteLayout.LayoutFlags="All"
                         Padding="20">
                <Label Text="Достигай большего с&#10;каждым днем!"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,20" />
                <Label Text="С нашим приложением ты&#10;сможешь легко отслеживать, как&#10;твое тело и здоровье меняются к&#10;лучшему. Каждый шаг важен!"
                       FontSize="14"
                       TextColor="Black" />
            </StackLayout>

            <Image Source="lightning.png"
                   AbsoluteLayout.LayoutBounds="0.9,0.85,90,90"
                   AbsoluteLayout.LayoutFlags="PositionProportional" />

            <Button Text="Назад"
                    Clicked="GoBack"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    BorderColor="Black"
                    BorderWidth="2"
                    CornerRadius="20"
                    Margin="20"
                    AbsoluteLayout.LayoutBounds="0,1,150,80"
                    AbsoluteLayout.LayoutFlags="PositionProportional" />

        </AbsoluteLayout>
        
    </Grid>
</ContentPage>
