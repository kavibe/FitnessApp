<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.Views.Registration.BearHelloPage"
             Title="BearHelloPage"
             BackgroundColor="#fff3f1">
    <AbsoluteLayout>
        <Image Source="hellobear.png"
               AbsoluteLayout.LayoutBounds="0.5,0.16,400,400"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <Image Source="hello.png"
               AbsoluteLayout.LayoutBounds="0.8,0.35,170,200"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <Image Source="purpleform3.png"
               AbsoluteLayout.LayoutBounds="0.75,0.85,400,400"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <StackLayout AbsoluteLayout.LayoutBounds="0.5,0.75,0.95,0.35"
                     AbsoluteLayout.LayoutFlags="All"
                     Padding="50">

            <Label Text="Познакомься с&#10;Борисом - твоим&#10;фитнес-медведем!"
                   FontSize="23"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,0,0,20"/>

            <Label Text="Мишка-Тренер всегда будет рядом. &#10;Вместе вы добьетесь невероятных&#10;результатов!"
                   FontSize="14"
                   TextColor="Black"/>

        </StackLayout>

        <Button Text="Назад"
                Clicked="GoBack"
                BackgroundColor="Transparent"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="2"
                CornerRadius="20"
                Margin="20"
                AbsoluteLayout.LayoutBounds="0,1,150,80"
                AbsoluteLayout.LayoutFlags="PositionProportional" />

        <Button Text="Далее"
                Clicked="GoNext"
                BackgroundColor="Transparent"
                TextColor="Black"
                BorderColor="Black"
                BorderWidth="2"
                CornerRadius="20"
                Margin="20"
                AbsoluteLayout.LayoutBounds="1,1,150,80"
                AbsoluteLayout.LayoutFlags="PositionProportional" />

    </AbsoluteLayout>
</ContentPage>
