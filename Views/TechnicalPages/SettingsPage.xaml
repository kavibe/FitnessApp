<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace=FitnessApp.Views.TechnicalsPages"
             x:Class="FitnessApp.Views.TechnicalPages.SettingsPage"
             Background="#FAF8F5">
    
    <VerticalStackLayout Padding="20" Spacing="24">
        <!-- Шапка -->
        <Grid ColumnDefinitions="auto, *, auto" RowDefinitions="auto, auto" RowSpacing="24" Grid.Row="0">
            <HorizontalStackLayout HorizontalOptions="Start" Grid.Column="0" Grid.Row="0">
                <ImageButton Source="back_icon.svg" Clicked="GoProfilePage" HeightRequest="10" VerticalOptions="Center"/>
                <Label Text="Назад" VerticalOptions="Center" FontSize="14" FontFamily="Montserrat" TextColor="#3e3e3e" HorizontalOptions="Start">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="GoProfilePage" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
            <Label Text="Настройки" Grid.Column="2" Grid.Row="0" VerticalOptions="Center" FontSize="24" FontFamily="MontserratMedium" TextColor="#3e3e3e" HorizontalOptions="End"/>

        </Grid>
        
        
        <Label Text="Звук" VerticalOptions="Center" FontSize="16" FontFamily="Montserrat" TextColor="#3e3e3e" HorizontalOptions="Start"/>
        <Label Text="Техподдержка" VerticalOptions="Center" FontSize="16" FontFamily="Montserrat" TextColor="#3e3e3e" HorizontalOptions="Start"/>
        <Label Text="Рекомендовать друзьям" VerticalOptions="Center" FontSize="16" FontFamily="Montserrat" TextColor="#3e3e3e" HorizontalOptions="Start"/>
        <Label Text="Напоминалка" VerticalOptions="Center" FontSize="16" FontFamily="Montserrat" TextColor="#3e3e3e" HorizontalOptions="Start"/>
        <Label Text="Правила использования" VerticalOptions="Center" FontSize="16" FontFamily="Montserrat" TextColor="#3e3e3e" HorizontalOptions="Start">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="GoRulesPage" />
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>